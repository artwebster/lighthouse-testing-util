{
  "extends": ["plugin:react/recommended"],
  "settings": {
    "react": {
      "version": "18.2.0"
    }
  },
  "overrides": [
    {
      "files": ["client/**/*.js"],
      "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "ecmaFeatures": {
          "jsx": true
        }
      },
      "env": {
        "browser": true
      },
      "plugins": ["react"],
      "extends": ["airbnb", "plugin:react/recommended"]
    },
    {
      "files": ["server/**/*.js"],
      "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
      },
      "env": {
        "node": true
      },
      "extends": ["eslint:recommended"]
    }
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "react/react-in-jsx-scope": "off"
  }
}
